{
  "name": "auth0/open-source-template",
  "description": "A template for open source projects at Auth0",
  "homepage": "https://github.com/auth0/open-source-template",
  "license": "MIT",
  "authors": [
    {
      "name": "Auth0",
      "email": "support@auth0.com",
      "homepage": "http://www.auth0.com/"
    }
  ],
  "require": {
    "php": "^5.5 || ^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "5.7.27",
    "josegonzalez/dotenv": "3.2.0",
    "squizlabs/php_codesniffer": "3.6.0",
    "wimg/php-compatibility": "8.2.0"
  },
  "autoload": {},
  "autoload-dev": {},
  "scripts": {
    "test": "vendor/bin/phpunit --colors=always --verbose ",
    "phpcs": "./vendor/bin/phpcs --standard=phpcs-ruleset.xml -s .",
    "phpcbf": "./vendor/bin/phpcbf --standard=phpcs-ruleset.xml .",
    "sniffs": "./vendor/bin/phpcs --standard=phpcs-ruleset.xml -e"
  }
}
